<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comment_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:padding="8dp">

        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="@string/placeholder_long"/>

        <TextView
            android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="@string/placeholder_long"
            android:maxEms="20"/>

        <TextView
            android:id="@+id/comment_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/comment_author"
            android:padding="5dp"
            android:textIsSelectable="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/placeholder_short"/>

        <LinearLayout
            android:id="@+id/comment_icon_area"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_message"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"> <!-- invisible for comments you don't own -->

            <ImageView
                style="@style/Ripple.Item"
                android:id="@+id/comment_edit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:src="@drawable/edit"
                android:tag="@string/edit_tag"
                android:contentDescription="@string/edit_comment"/>

            <ImageView
                style="@style/Ripple.Item"
                android:id="@+id/comment_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:src="@drawable/delete"
                android:tag="@string/edit_tag"
                android:contentDescription="@string/delete_comment"/>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>